{
"extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true,
    "jquery": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": ["off"],
    "no-undef": "off",
    "func-names": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2,
        "comments": 120,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "quotes": ["error", "single"]
  }
}
